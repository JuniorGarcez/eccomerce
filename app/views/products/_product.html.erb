<div id="<%= dom_id product %>" class="card" style="width: 18rem; align-items:center;">
  <%= image_tag(product.image, class: 'image')%><br>
  <div class="card-body">
    <h5 class="card-title"><%= product.title %></h5>
    <p class="card-text"><%= product.description %></p>
  </div>
  <div class='row'>
    <div class='col-sm-4'>
      <%= link_to "Show", product_path(product), :class => "btn btn-small btn-primary"%>
    </div>
    <div class='col-sm-4'>
      <%= link_to "Edit", edit_product_path(product), :class => 'btn btn-primary btn-sm' %>
    </div>
    <div class='col-sm-4'>
      <%= link_to "Destroy", product_path(product.id),
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"},
        :class => 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>