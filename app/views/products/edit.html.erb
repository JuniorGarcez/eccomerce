<div class='form-product'>
  <%= render "form", product: @product %>
  <div class='row'>
    <div class='col-sm-4'>
    </div>
    <div class='col-sm-4'>
      <%= link_to "Destroy", product_path(@product.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, :class => 'btn btn-danger btn-sm' %>
    </div>
    <div class='col-sm-4'>
      <%= link_to "Show product", @product, :class => 'btn btn-primary btn-sm' %>
    </div>
  </div>
  <%= link_to "Back to products", products_path, :class => 'btn btn-primary btn-sm'  %>
</div>
